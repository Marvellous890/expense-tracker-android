<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.codeycoder.expensetracker.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addTransFragment"
            app:destination="@id/addTransFragment"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_anim"
            app:popExitAnim="@anim/nav_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/addTransFragment"
        android:name="com.codeycoder.expensetracker.AddTransactionFragment"
        tools:layout="@layout/fragment_home" />
</navigation>