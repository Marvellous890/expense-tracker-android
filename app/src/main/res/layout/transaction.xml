<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/trans_list_item_bg"
    android:clickable="true"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <com.codeycoder.expensetracker.views.Button
        android:id="@+id/t_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_t" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entertainment"
            android:textColor="@color/black"
            android:textFontWeight="600" />

        <TextView
            android:id="@+id/trans_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_account_today"
            android:textColor="@color/grayscale_600"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/trans_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¦4,906.76"
            android:textColor="@color/error_200"
            android:textFontWeight="600" />

        <TextView
            android:id="@+id/trans_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:26 AM"
            android:textColor="@color/grayscale_600" />

    </LinearLayout>

</LinearLayout>