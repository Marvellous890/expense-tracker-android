<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. I don't give a fuck of material -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- ? means resolve this attribute from the current theme. If it's a system attribute append the android: namespace eg ?android:attr/absListViewStyle -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/notoserif_family</item>
        <item name="android:textColor">@color/grayscale_500</item>
<!--        <item name="android:textSize">12sp</item>-->
    </style>

    <style name="Theme.ExpenseTracker.DefaultTextSize" parent="Theme.ExpenseTracker">
        <item name="android:textSize">@null</item>
    </style>
</resources>